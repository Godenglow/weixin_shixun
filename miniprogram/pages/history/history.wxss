.container {
  padding: 20rpx 30rpx;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #07C160;
  background-color: rgba(7, 193, 96, 0.1);
}

.records-list {
  display: flex;
  flex-direction: column;
}

.record-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.record-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.record-cover-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover-icon {
  font-size: 40rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-date {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.record-score {
  display: flex;
  align-items: baseline;
}

.score-num {
  font-size: 32rpx;
  font-weight: 600;
}

.score-label {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.record-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.empty-btn {
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #07C160;
  border-radius: 36rpx;
  border: none;
}

.empty-btn::after {
  border: none;
}
