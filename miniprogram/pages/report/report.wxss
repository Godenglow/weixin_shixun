.container {
  padding: 0 30rpx 30rpx;
}

.report-header {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.report-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.report-date {
  font-size: 26rpx;
}

.score-section,
.interpretation-section,
.analysis-section,
.suggestions-section,
.dimensions-section {
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.score-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.score-circle {
  display: flex;
  align-items: baseline;
}

.score-num {
  font-size: 72rpx;
  font-weight: 600;
  color: #07C160;
}

.score-unit {
  font-size: 28rpx;
  color: #07C160;
  margin-left: 8rpx;
}

.level-badge {
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
}

.level-badge text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
}

.interpretation-content {
  padding: 20rpx;
  background-color: rgba(7, 193, 96, 0.05);
  border-radius: 8rpx;
}

.interpretation-text {
  font-size: 28rpx;
  line-height: 1.8;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666666;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.suggestion-num {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #07C160;
  border-radius: 50%;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 28rpx;
  line-height: 1.6;
}

.dimension-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.dimension-name {
  width: 140rpx;
  font-size: 28rpx;
  flex-shrink: 0;
}

.dimension-bar-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}

.dimension-bar-bg {
  flex: 1;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.dimension-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.dimension-score {
  width: 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: right;
  flex-shrink: 0;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 26rpx 0;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: 2rpx solid #07C160;
  background-color: transparent;
  color: #07C160;
}

.action-btn.primary {
  background-color: #07C160;
  color: #ffffff;
}

.action-btn::after {
  border: none;
}
