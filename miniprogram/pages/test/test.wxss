.container {
  padding: 20rpx 30rpx;
  min-height: 100vh;
}

.progress-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.progress-track {
  flex: 1;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #07C160, #10B981);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999999;
}

.question-card {
  padding: 40rpx;
  border-radius: 16rpx;
  min-height: 400rpx;
  margin-bottom: 40rpx;
}

.question-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.question-num {
  font-size: 28rpx;
  font-weight: 600;
  color: #07C160;
  margin-right: 16rpx;
}

.question-type {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  color: #ffffff;
  background-color: #ff976a;
  border-radius: 6rpx;
}

.question-content {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.option-item.selected {
  border-color: #07C160;
  background-color: rgba(7, 193, 96, 0.05);
}

.option-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #e0e0e0;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.option-item.selected .option-indicator {
  border-color: #07C160;
  background-color: #07C160;
}

.option-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ffffff;
}

.option-check {
  font-size: 24rpx;
  color: #ffffff;
}

.option-text {
  font-size: 28rpx;
  flex: 1;
}

.scale-options {
  margin-top: 20rpx;
}

.scale-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.scale-label {
  font-size: 24rpx;
}

.button-row {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.nav-btn {
  flex: 1;
  padding: 28rpx 0;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: none;
}

.nav-btn::after {
  border: none;
}

.prev-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.submit-btn {
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
  color: #ffffff;
}

.disabled-btn {
  background-color: #e0e0e0;
  color: #999999;
}
