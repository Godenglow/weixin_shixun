.container {
  padding: 0;
  padding-bottom: 30rpx;
}

.header {
  padding: 30rpx;
  background: linear-gradient(135deg, #07C160 0%, #10B981 100%);
}

.welcome-section {
  margin-bottom: 30rpx;
}

.welcome-text {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-card {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #07C160;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.section {
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.more-btn {
  font-size: 26rpx;
  color: #999999;
}

.recommend-scroll {
  white-space: nowrap;
  width: 100%;
}

.recommend-list {
  display: inline-flex;
  padding-right: 30rpx;
}

.recommend-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recommend-cover {
  width: 280rpx;
  height: 180rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.recommend-cover-placeholder {
  width: 280rpx;
  height: 180rpx;
  border-radius: 16rpx 16rpx 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.recommend-info {
  padding: 20rpx;
}

.recommend-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-desc {
  font-size: 22rpx;
  color: #999999;
}

.hot-list {
  display: flex;
  flex-direction: column;
}

.hot-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.hot-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.hot-cover-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
}

.hot-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hot-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.hot-desc {
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hot-meta {
  display: flex;
  align-items: center;
}

.hot-count {
  font-size: 22rpx;
  color: #07C160;
}

.quick-section {
  padding: 0 30rpx 30rpx;
}

.quick-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 20rpx;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.quick-label {
  font-size: 24rpx;
}

.quick-item:active {
  opacity: 0.8;
}
